<div class="home__section">
	<ul class="tab-headers nav nav-tabs">
  	{% for i in 1..8 %}
    	{% if attribute(_context, 'slider_' ~ i ~ '_status') and attribute(_context, 'products_slider_' ~ i) %} 
      	<li><a href="#tab_slider_{{ i }}" data-toggle="tab">{{ attribute(_context, 'heading_title_slider_' ~ i) }}</a></li>
    	{% endif %} 
  	{% endfor %}
	</ul>

	<div class="tab-content">
  	{% for i in 1..8 %}
    	{% if attribute(_context, 'slider_' ~ i ~ '_status') and attribute(_context, 'products_slider_' ~ i) %} 
      	<div class="hometab_sliders_tab rev_slider tab-pane" id="tab_slider_{{ i }}">
        	<div class="row">
          	<div id="slider_slider_{{ i }}" class="swiper-container swiper-carousel">
            	<div class="swiper-wrapper">
              	{% include 'revolution/template/product/partials/carousel_product.twig' with {
                	'products_slider': attribute(_context, 'products_slider_' ~ i)
              	} %}
            	</div>
          	</div>
        	</div>
      	</div>
    	{% endif %} 
  	{% endfor %}

		<script>
			document.querySelector('.tab-headers li:first-child').classList.add('active');
			document.querySelector('.tab-content .hometab_sliders_tab:first-child').classList.add('active');
		</script>
	</div>
</div>
