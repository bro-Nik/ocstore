{% if (products and not recpr_rightc) %}
  <div id="product_accessories">
    <div class="accessories_tab_heading">{{ text_related }}</div>
    <div class="row">
      <div class="accessories dragscroll">
        {% for product in products %}
          <div class="product-layout col-lg-12 item">
            <div class="accessories-thumb product_{{ product['product_id'] }}">
              <div class="accessories_title">
                <a href="{{ product['href'] }}" target="_blank">{{ product['name'] }}</a>
              </div>
              <div class="accessories_image">
                {% if (product['product_in_cart']) %}
                  <div class="pr_in_cart_i">
                    <i class="fa fa-check"></i>
                  </div>
                {% endif %}
                <img src="{{ product['thumb'] }}" alt="{{ product['name'] }}" title="{{ product['name'] }}" class="img-responsive {% if ((product['quantity'] < 1 and not zakaz) or (product['price_number'] == 0 and not zakaz_price_null)) %}zatemnenie_img{% endif %}"/>
              </div>
              <div class="accessories_buttons">
                {% if (product['price'] and product['price_number'] > 0 and product['quantity'] > 0) %}
                  {% set button_cart_class = 'prlistb' %}
                  <div class="number bordnone"></div>
                  <input type="hidden" name="quantity" class="plus-minus" value='{{ product['minimum'] }}'>
                  <div class="cart">
                    <a class="add-to-cart" data-product-id="{{ product['product_id'] }}" data-action="module_in_product" data-block-id="product_accessories" {% if (button_cart_class != 'prlistb active') %} data-toggle="tooltip" {% endif %}>
                      <span>{{ button_cart }}</span>
                    </a>
                  </div>
                  <div class="accessories-price">
                    {% if (not product['special']) %}
                      <span class="price_no_format{{ product['product_id'] }}">{{ product['price'] }}</span>
                      {{ product['ed_izm'] ? '<span class="ed_izm">'~product['ed_izm']~'</span>' : '' }}
                    {% else %}
                      <span class="price-new">
                        <span class="price_no_format{{ product['product_id'] }}">{{ product['special'] }}</span>
                      </span>
                      {{ product['ed_izm'] ? '<span class="ed_izm">'~product['ed_izm']~'</span>' : '' }}
                    {% endif %}
                  </div>

                {% endif %}

              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <script src="catalog/view/javascript/dragscroll.js"></script>
  </div>
{% endif %}
