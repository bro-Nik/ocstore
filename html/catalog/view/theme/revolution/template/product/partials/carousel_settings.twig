window.setTimeout(function() {
	{% if (slider) %} 
		$('{{ block }} > .item').attr('class', 'product-layout col-lg-12 item');
		$('{{ block }}').owlCarousel({
    		responsiveBaseWidth: '{{ block }}',
    		itemsCustom: [[0, 1], [375, 2], [750, 3], [970, 4], [1200, 5], [1400, 6]],
    		mouseDrag: true,
    		navigation: true,
    		navigationText: ['<i class="fa fa-chevron-left"></i>', '<i class="fa fa-chevron-right"></i>'],
    		pagination: true,
			{% if (autoscroll) %} 
				autoPlay: {{ autoscroll }}*1000,
			{% endif %} 
			afterUpdate : function(){
				update_height_div();
			}
		});
	{% else %} 
		$('{{ block }}').parent().addClass('rev_slider_cat_compact');
		$('{{ block }}').css('display', 'block').css('padding-top', '2px');
		$('{{ block }} > .item').attr('class', 'product-layout product-grid col-lg-3 col-md-3 col-sm-4 col-xs-12 item');
		$('[href="{{ tab_btn }}"]').click(function () {
			update_height_div();
		});
	{% endif %} 

	{% if (img_slider) %} 
		$('{{ block }} .owlproduct').owlCarousel({
			items: 1,
			singleItem: true,
			mouseDrag: false,
			touchDrag: false,
			autoPlay: false,
			navigation: true,
			navigationText: ['<i class="fa fa-chevron-left fa-3x"></i>', '<i class="fa fa-chevron-right fa-3x"></i>'],
			pagination: false
		});
	{% else %} 
		$('.owl-carousel.owlproduct').remove();
	{% endif %} 

	{# max_height_div('{{ block }} .product-thumb h4'); #}
	{# $('{{ block }} .product-thumb .description_options').css('min-height', 'initial'); #}
	{# {% if (not setting_all_settings['cat_opis_opt'] or slider) %}  #}
	{# 	max_height_div('{{ block }} .product-thumb .description_options'); #}
	{# {% endif %}  #}
	{# max_height_div('{{ block }} .product-thumb .price'); #}
	{# max_height_div('{{ block }} .product-thumb .number'); #}
	{# max_height_div('{{ block }} .product-thumb .product_buttons'); #}
	
	function update_height_div() {
		window.setTimeout(function() {
			max_height_div('{{ block }} .product-thumb h4');
			$('{{ block }} .product-thumb .description_options').css('min-height', 'initial');
			max_height_div('{{ block }} .product-thumb .description_options');
			max_height_div('{{ block }} .product-thumb .price');
			max_height_div('{{ block }} .product-thumb .number');
			max_height_div('{{ block }} .product-thumb .product_buttons');
		});
	}

	update_height_div();

	function max_height_div(div) {
		var maxheight = 0;
		$(div).each(function(){
			$(this).removeAttr('style');
			if($(this).height() > maxheight) {
				maxheight = $(this).height();
			}
		});
		$(div).height(maxheight);
	}
},10)

