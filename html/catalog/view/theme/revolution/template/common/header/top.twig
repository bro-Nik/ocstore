	<div id="top" class="header__row top1">
				<div class="header__group header__info">
				  {% for info in informations %}<a href="{{ info.href }}">{{ info.title }}</a>{% endfor %}

  				{% for link in revtheme_header_links %}<a href="{{ link.link }}">{{ link.title }}</a>{% endfor %}

					{% if (revtheme_dop_menus_2) %} 
							{% for revtheme_dop_menu in revtheme_dop_menus_2 %} 
								{% if (revtheme_dop_menu['children'] is defined) %} 
									<div class="dropdown">
										<a href="{{ revtheme_dop_menu['href'~config_language_id] }}" class="dropdown-toggle" data-toggle="dropdown">
											{{ revtheme_dop_menu['name'~config_language_id] }}
											<!-- <i class="fa fa-chevron-down"></i> -->
										</a>
										<ul class="dropdown-menu dropdown-menu-right">
											{% for child in revtheme_dop_menu['children'] %}
												<li><a href="{{ child['href'~config_language_id] }}">{{ child['name'~config_language_id] }}</a></li>
											{% endfor %}
										</ul>
									</div>
								{% else %}
									<a href="{{ revtheme_dop_menu['href'~config_language_id] }}">{{ revtheme_dop_menu['name'~config_language_id] }}</a>
								{% endif %}
							{% endfor %}
					{% endif %} 
				</div>

			<div class="header__group header__action">
						<a href="{{ compare }}"><i class="fa fa-bar-chart"></i>Сравнение<sup><span class="compare-total">{{ compare_count }}</span></sup></a>
						<a href="{{ wishlist }}"><i class="fa fa-heart"></i>Избранное<sup><span class="wishlist-total">{{ wishlist_count }}</span></sup></a>
						<a class="cart-show-popup" data-action="show_cart"><i class="fa fa-shopping-basket"></i>Корзина<sup><span class="cart-total">{{ cart_count }}</span></sup></a>
			</div>
	</div>
