{% if services %}
<div id="recommended-services">
    <h3>Рекомендуемые услуги</h3>
    <div class="row">
      <div id="recommended_services" class="swiper swiper-carousel">
        <div class="swiper-wrapper" style="height: 100%;">
          {% for service in services %}
            <div class="swiper-slide category-service-tile">
              <div class="category-service-content">
                <a href="{{ service.href }}">{{ service.name }}</a>
                {#}
                <img src="{{ service.img }}" title="{{ service.name }}" alt="{{ service.name }}"/>
                {#}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
</div>
{% endif %}
