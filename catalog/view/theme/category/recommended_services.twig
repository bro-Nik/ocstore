{% if services %}
<div id="recommended-services">
    <h2>Рекомендуемые услуги</h2>
    <div class="row">
      <div id="recommended_services" class="swiper swiper-carousel">
        <div class="swiper-wrapper" style="height: 100%;">
          {% for service in services %}
				    <div class="swiper-slide blog__article-tile" style="margin-right: 10px;">
              <div class="blog__article-content">
          	    <div class="blog__article-info">
							    <a href="{{ service.href }}">{{ service.name }}</a>
          	    </div>
              </div>

              {% if service.image %}
                <div class="blog__article-image">
						      <img src="{{ service.image }}" alt="{{ service.name }}" title="{{ service.name }}" class="img-responsive" loading="lazy" />
                </div>
              {% endif %}
      	    </div>
          {% endfor %}
        </div>
      </div>
    </div>
</div>
{% endif %}
