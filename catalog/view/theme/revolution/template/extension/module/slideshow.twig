{% if (slides) %} 
	<div id="home_slideshow" class="swiper swiper-carousel">
  	<div class="swiper-wrapper">
			{% for slide in slides %} 
      	<div class="swiper-slide slide__tile" style="margin-right: 10px;">
					<a href="{{ slide.link }}" class="slide__item">
						<img src="{{ slide.image }}" alt="{{ slide.title }}" {% if loop.index < 3 %} fetchpriority="high" loading="eager" width="{{ width }}" height="{{ height }}"{% endif %}>
					</a>
      	</div>
    	{% endfor %}
		</div>
	</div>
{% endif %} 
