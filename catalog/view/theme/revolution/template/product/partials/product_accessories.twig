{% if (accessories) %}
  <div id="product_accessories">
    <div class="accessories_tab_heading">{{ text_related }}</div>
    <div class="row">
      <div class="accessories dragscroll">
        {% for product in accessories %}
          <div class="product-layout col-lg-12 item">
            <div class="accessories-thumb product_{{ product['product_id'] }}">
              <div class="accessories_title">
                <a href="{{ product['href'] }}" target="_blank">{{ product['name'] }}</a>
              </div>
              <div class="accessories_image">
                <img src="{{ product['thumb'] }}" alt="{{ product['name'] }}" title="{{ product['name'] }}" class="img-responsive {% if (product['quantity'] < 1) %}zatemnenie_img{% endif %}"/>
              </div>
              <div class="accessories_buttons">
                {% if (product['price'] and product['price'] > 0 and product['quantity'] > 0) %}
                  {% set button_cart_class = 'prlistb' %}
                  <div class="number bordnone"></div>
                  <input type="hidden" name="quantity" class="plus-minus" value='{{ product['minimum'] }}'>
                  <div class="cart">
                    <a class="btn-cart product_{{ product['product_id'] }}" data-product-id="{{ product['product_id'] }}" data-action="cart-toggle" data-module="module_in_product" data-block-id="product_accessories" {% if (button_cart_class != 'prlistb active') %} data-toggle="tooltip" {% endif %}>
                      {{ button_cart }}
                    </a>
                  </div>
                  <div class="accessories-price">
                    {% if (not product['special_price']) %}
                      <span class="price_no_format{{ product['product_id'] }}">{{ product['price'] }} ₽</span>
                    {% else %}
                      <span class="price-new">
                        <span class="price_no_format{{ product['product_id'] }}">{{ product['special_price'] }} ₽</span>
                      </span>
                    {% endif %}
                  </div>

                {% endif %}

              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <script src="catalog/view/javascript/dragscroll.js"></script>
  </div>
{% endif %}
