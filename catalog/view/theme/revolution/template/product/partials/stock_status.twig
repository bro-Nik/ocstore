<div class="stock_status">

  {% if main_product is defined %}
    {% if (sklad_status) %}
      {% if (quantity > 1) %}
        <span class="stock_yes">
          <i class="fa fa-check" aria-hidden="true"></i>
        </span>
        <span> {{ sklad_status }} </span>
      {% elseif (quantity == 1) %}
        <span class="stock_on_order">
          <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
          {{ sklad_status }}
        </span>
      {% else %}
        <span class="stock_no">
          <i class="fa fa-times" aria-hidden="true"></i>
          Товара нет в наличии
        </span>
      {% endif %}
    {% endif %}

  {% else %}
    {% if (product['quantity'] > 1) %}
      <span class="stock_yes">
        <i class="fa fa-check" aria-hidden="true"></i>
      </span>
      <span> {{ product['sklad_status'] }} </span>
    {% elseif (product['quantity'] == 1) %}
      <span class="stock_on_order">
        <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
        {{ product['sklad_status'] }}
      </span>
    {% else %}
      <span class="stock_no">
        <i class="fa fa-times" aria-hidden="true"></i>
        Товара нет в наличии
      </span>
    {% endif %}
  {% endif %}
</div>
