<div itemscope itemtype="http://schema.org/BreadcrumbList" style="display:none;">
  {% set position = 1 %}
  {% for breadcrumb in breadcrumbs %}
    <div itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
      <link itemprop="item" href="{{ breadcrumb['href'] }}">
      <meta itemprop="name" content="{{ breadcrumb['text'] }}"/>
      <meta itemprop="position" content="{{ position }}"/>
    </div>
    {% set position = position + 1 %}
  {% endfor %}
</div>

<ul class="breadcrumb">
  <li class="br_ellipses" style="display: none;">...</li>
  {% for i,breadcrumb in breadcrumbs %}
    {% if (i+1<breadcrumbs|length) %}
      <li>
        <a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a>
      </li>
      {% else %}
    {% endif %}
  {% endfor %}
  <li>
    <span class="inbreadcrumb" itemprop="name">{{ heading_title }}</span>
  </li>
  {#<li><h1 class="inbreadcrumb" itemprop="name">{{ heading_title }}</h1></li>#}
</ul>
