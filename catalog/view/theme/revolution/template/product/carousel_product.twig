<div id="{{ id }}" style="margin: 3rem 0;">
  {% if title %}<h3>{{ title }}</h3>{% endif %}

  <div class="row">
    <div id="{{ id }}" class="swiper swiper-carousel">
      <div class="swiper-wrapper" style="height: 100%;">
        {% for product in products %} 
        <div class="swiper-slide" style="margin-right: 10px;">
          {% include 'product/card.twig' with {'img_eager_load': loop.indes <= 4} %}
        </div>
        {% endfor %} 
      </div>
    </div>
  </div>
</div>
