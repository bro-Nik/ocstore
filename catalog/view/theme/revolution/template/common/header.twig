<!DOCTYPE html>
<html dir="ltr" lang="ru" class="{{ class }}">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<title>{{ title }}</title>
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "{{ name }}",
  "url": "{{ og_url }}",
  "logo": "{{ logo }}",
  "description": "{{ description }}",
  "telephone": "{{ microdata_phones[0] }}",
  "email": "{{ microdata_email }}"
}
</script>
{% if (description) %} 
<meta name="description" content="{{ description }}" />
{% endif %} 
{% if (keywords) %} 
<meta name="keywords" content= "{{ keywords }}" />
{% endif %} 
<base href="{{ base }}" />
<meta property="og:title" content="{{ title }}" />
<meta property="og:type" content="website" />
<meta property="og:url" content="{{ og_url }}" />
<meta property="og:image" content="{{ og_image is not empty ? og_image : logo }}" />
<meta property="og:site_name" content="{{ name }}" />

{% for style in styles %}
  <link href="{{ style.href }}" rel="{{ style.rel }}" type="text/css" media="{{ style.media }}" />
{% endfor %}
{% for link in links %} 
<link href="{{ link.href }}" rel="{{ link.rel }}" />
{% endfor %} 
{% for script in scripts %} 
<script src="{{ script }}"></script>
{% endfor %} 
{% for analytic in analytics %} 
{{ analytic }} 
{% endfor %} 

</head>
<body>
<div class="app-content">

<header class="header">
  <div class="container-fluid">
    <div class="header__mobile">
      {% include 'revolution/template/common/header/top_mobil.twig' %}
    </div>
    <div class="header__desktop">
      {% include 'revolution/template/common/header/top.twig' %}
      {% include 'revolution/template/common/header/top2.twig' %}
      {% include 'revolution/template/common/header/top3.twig' %}
    </div>
  </div>
</header>

<section class="main-content">
