<div style="margin: 3rem 0;">
  <div class="swiper swiper-carousel">
    <div class="swiper-wrapper" style="height: 100%;">
			{% for brand in brands %} 
        <div class="swiper-slide">
					<a class="brand-slider-thumb" href="{{ brand.href }}">
            <img src="{{ brand.image }}" alt="{{ brand.name }}" title="{{ brand.name }}" class="img-responsive" rel="nofollow" loading="lazy"/>
					</a>
        </div>
      {% endfor %} 
    </div>
  </div>
</div>
