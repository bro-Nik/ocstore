<div class="header__nav">
	<a href="#mobil_mmenu">
	<svg xmlns="http://www.w3.org/2000/svg" stroke="currentColor" stroke-width="1.2" width="20" height="20" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5"/></svg>
	</a>
	{% include 'revolution/template/common/header/mobil_menu.twig' %}
</div>
	

<div class="header__logo">
	<div>
	{% if (logo) %} 
    <a href="{{ home }}" class="logo-link">
      <img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" class="img-responsive header__logo" />
    </a>
	{% else %} 
    <a href="{{ home }}" class="logo-link">{{ name }}</a>
	{% endif %}
	</div>
</div>

