{% extends 'revolution/template/product/partials/base.twig' %}
{% from 'macro/format.twig' import price_format %}

{% block content %}
  <div class="row">{{ column_left }} 
    {% if (column_left and column_right) %} 
    {% set class = 'col-sm-6' %} 
    {% elseif (column_left or column_right) %} 
    {% set class = 'col-sm-9' %} 
    {% else %} 
    {% set class = 'col-sm-12' %} 
    {% endif %} 
    <div id="content" class="{{ class }}">{{ content_top }} 
      {% if (products) %} 
      <table class="table table-revolution">
        <thead>
          <tr>
            <td class="text-center hidden-xs">{{ column_image }}</td>
            <td class="text-left">{{ column_name }}</td>
			{% if (settings['revcheckout_model']) %} 
				<td class="text-center hidden-xs">{{ column_model }}</td>
			{% endif %} 
			{% if (settings['revcheckout_sku']) %} 
				<td class="text-center hidden-xs">Артикул</td>
			{% endif %} 
            <td class="text-center hidden-xs">Цена</td>
            <td class="text-center">{{ column_action }}</td>
          </tr>
        </thead>
        <tbody class="products_category wishlist-products">
          {% for product in products %} 
          <tr class="product_{{ product['product_id'] }}">
            <td class="text-center image hidden-xs">{% if (product['thumb']) %} 
              <a href="{{ product['href'] }}"><img src="{{ product['thumb'] }}" alt="{{ product['name'] }}" title="{{ product['name'] }}" /></a>
              {% endif %}</td>
            <td class="text-left"><a href="{{ product['href'] }}">{{ product['mpn'] ?: product['name'] }}</a></td>
			{% if (settings['revcheckout_model']) %} 
				<td class="text-center hidden-xs">{{ product['model'] }}</td>
			{% endif %} 
			{% if (settings['revcheckout_sku']) %} 
				<td class="text-center hidden-xs">{{ product['sku'] }}</td>
			{% endif %} 
            <td class="text-center hidden-xs">{% if (product['price']) %} 
              <div class="price">
                {% if (not product['special']) %} 
                {{ price_format(product['price']) }}
                {% else %} 
                <span class="price-old">{{ price_format(product['price']) }}</span><span class="price-new">{{ price_format(product['special']) }}</span>
                {% endif %} 
              </div>
              {% endif %}</td>
            <td class="text-center wwicons">
              <div class="inline-btns">
                {% include 'product/btns/cart.twig' %}
								<a href="" onclick="setTimeout(function() { location.reload(); }, 100); return false;" data-action="wishlist-toggle" data-product-id="{{ product.product_id }}">
									<i class="fa fa-border fa-trash-o"></i>
								</a>
              </div>
			      </td>
          </tr>
          {% endfor %} 
        </tbody>
      </table>
      {% else %} 
      <p>{{ text_empty }}</p>
      {% endif %} 
      {{ content_bottom }}</div>

{% endblock %}
