{% if (quantity > 0 and price > 0) %}
  <button class="cart btn-cart" data-action="cart-toggle" aria-label="Добавить {{ name }} в корзину">
    Купить
  </button>
{% elseif (quantity < 1) %}
  <button class="cart" data-action="predzakaz" aria-label="Уведомить о наличии {{ name }}">
    Уведомить
  </button>
{% elseif (price == 0) %}
  <button class="cart" data-action="predzakaz" aria-label="Запросить цену {{ name }}">
    Запросить цену
  </button>
{% endif %}
