<div class="form-group">
  <label class="col-sm-2 control-label" for="input-title">Заголовок</label>
  <div class="col-sm-10">
    <input type="text" name="featured_articles[title]" value="{{ featured_articles.title }}" id="input-title" class="form-control" />
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label" for="input-limit">Лимит</label>
  <div class="col-sm-10">
    <input type="text" name="featured_articles[limit]" value="{{ featured_articles.limit }}" id="input-limit" class="form-control" />
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label" for="input-width">Ширина картинки</label>
  <div class="col-sm-10">
    <input type="text" name="featured_articles[width]" value="{{ featured_articles.width }}" id="input-width" class="form-control" />
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label" for="input-height">Высота картинки</label>
  <div class="col-sm-10">
    <input type="text" name="featured_articles[height]" value="{{ featured_articles.height }}" id="input-height" class="form-control" />
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label" for="input-status">Статус</label>
  <div class="col-sm-10">
    <select name="featured_articles[status]" id="input-status" class="form-control">
      {% if featured_articles.status %}
      <option value="1" selected="selected">Включено</option>
      <option value="0">Отключено</option>
      {% else %}
      <option value="1">Включено</option>
      <option value="0" selected="selected">Отключено</option>
      {% endif %}
    </select>
  </div>
</div>
