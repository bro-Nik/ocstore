<div class="form-group">
  <label class="col-sm-2 control-label" for="input-title">Заголовок</label>
  <div class="col-sm-10">
    <input type="text" name="featured_products[title]" value="{{ featured_products.title }}" id="input-title" class="form-control" />
  </div>
</div>
<div class="form-group">
  <label class="col-sm-2 control-label" for="input-limit">Лимит</label>
  <div class="col-sm-10">
    <input type="text" name="featured_products[limit]" value="{{ featured_products.limit }}" id="input-limit" class="form-control" />
  </div>
</div>
<div class="form-group">
  <label class="col-sm-2 control-label" for="input-status">Статус</label>
  <div class="col-sm-10">
    <select name="featured_products[status]" id="input-status" class="form-control">
      {% if featured_products.status %}
      <option value="1" selected="selected">Включено</option>
      <option value="0">Отключено</option>
      {% else %}
      <option value="1">Включено</option>
      <option value="0" selected="selected">Отключено</option>
      {% endif %}
    </select>
  </div>
</div>
