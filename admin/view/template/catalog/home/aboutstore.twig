<div class="form-group">
	<label class="col-sm-2 control-label">Включить:
	</label>
	<div class="col-sm-3">
		<label class="radio-inline">
      <input type="radio" name="aboutstore[status]" value="1" {{ aboutstore.status ? 'checked' }} /><span>Да</span>
		</label>
		<label class="radio-inline">
      <input type="radio" name="aboutstore[status]" value="0" {{ not aboutstore.status ? 'checked' }} /><span>Нет</span>
		</label>
	</div>
</div>
<div class="form-group">
	<label class="col-sm-2 control-label">Заголовок:</label>
	<div class="col-sm-3">
		<input class="form-control" type="text" name="aboutstore[title]" value="{{aboutstore['title'] is defined ? aboutstore['title'] : 'О магазине' }}" />
	</div>
</div>
<div class="form-group">
	<label class="col-sm-2 control-label">Текст:</label>
	<div class="col-sm-10">
			<textarea name="aboutstore[description]" id="input-description" class="form-control">{{ aboutstore['description'] is defined ? aboutstore['description'] : '' }}</textarea>
	</div>
</div>
