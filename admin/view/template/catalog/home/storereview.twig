<div class="form-group">
	<label class="col-sm-2 control-label">Включить:
	</label>
	<div class="col-sm-3">
		<label class="radio-inline">
			<input type="radio" name="storereview[status]" value="1" {{ storereview.status ? 'checked' }} /><span>Да</span>
		</label>
		<label class="radio-inline">
			<input type="radio" name="storereview[status]" value="0" {{ not storereview.status ? 'checked' }} /><span>Нет</span>
		</label>
	</div>
</div>
<div class="form-group">
	<label class="col-sm-2 control-label">Заголовок:</label>
	<div class="col-sm-3">
		<input type="text" name="storereview[title]" value="{{storereview['title'] is defined ? storereview['title'] : 'Отзывы наших клиентов' }}" class="form-control" />
	</div>
</div>
<div class="form-group">
	<label class="col-sm-2 control-label">Кнопка "Все отзывы":
	</label>
	<div class="col-sm-3">
		<label class="radio-inline">
			<input type="radio" name="storereview[button_all]" value="1" {{ storereview.button_all ? 'checked' }} /><span>Вкл.</span>
		</label>
		<label class="radio-inline">
			<input type="radio" name="storereview[button_all]" value="0" {{ not storereview.button_all ? 'checked' }} /><span>Выкл.</span>
		</label>
	</div>
</div>
<div class="form-group">
	<label class="col-sm-2 control-label">Текст кнопки "Все отзывы":</label>
	<div class="col-sm-3">
		<input type="text" name="storereview[button_all_text]" value="{{storereview['button_all_text'] is defined ? storereview['button_all_text'] : 'Читать все отзывы' }}" class="form-control" />
	</div>
</div>
<div class="form-group">
	<label class="col-sm-2 control-label">Лимит отзывов:</label>
	<div class="col-sm-3">
		<input class="form-control" type="text" name="storereview[limit]" value="{{ storereview['limit'] }}" />
	</div>
</div>
<div class="form-group">
	<label class="col-sm-2 control-label">Сортировка отзывов:
	</label>
	<div class="col-sm-3">
		<label class="radio-inline">
			<input type="radio" name="storereview[order]" value="1" {{ storereview.order ? 'checked' }} /><span>Случайно</span>
		</label>
		<label class="radio-inline">
			<input type="radio" name="storereview[order]" value="0" {{ not storereview.order ? 'checked' }} /><span>По дате</span>
		</label>
	</div>
</div>
<div class="form-group">
	<label class="col-sm-2 control-label">Лимит символов отзыва:</label>
	<div class="col-sm-3">
		<input class="form-control" type="text" name="storereview[limit_text]" value="{{ storereview['limit_text'] }}" />
	</div>
</div>
