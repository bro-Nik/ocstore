{% extends 'partials/base.twig' %}

{% block content %}

{% if error_warning %}
  <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
{% endif %}

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
  </div>

  <div class="panel-body">
    <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-homepage" class="form-horizontal">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#tab-slideshow" data-toggle="tab">Слайдшоу</a></li>
        <li><a href="#tab-recommendations" data-toggle="tab">Рекомендуемые</a></li>
        <li><a href="#tab-related-categories" data-toggle="tab">Рекомендуемые категории</a></li>
        <li><a href="#tab-slider1" data-toggle="tab">Слайдер товаров 1</a></li>
        <li><a href="#tab-slider2" data-toggle="tab">Слайдер товаров 2</a></li>
        <li><a href="#tab-blog" data-toggle="tab">Виджет новостей</a></li>
      </ul>

      <div class="tab-content">

				{# Слайдшоу #}
        <div class="tab-pane active" id="tab-slideshow">
          {% include 'catalog/home/slideshow.twig' %}
        </div>

				{# Рекомендуемые (плитки) #}
			  <div class="tab-pane" id="tab-recommendations">
          {% include 'catalog/home/recommendations.twig' %}
			  </div>

				{# Рекомендуемые категории #}
			  <div class="tab-pane" id="tab-related-categories">
			    <div class="form-group">
          	{% include 'catalog/partials/related_categories.twig' %}
        	</div>
        </div>

				{# Слайдеры товаров #}
				<div class="tab-pane" id="tab-slider1">
          {% include 'catalog/home/tabslider.twig' with {'sliders': sliders_1, 'sliders_key': 'sliders_1'} %}
				</div>

				<div class="tab-pane" id="tab-slider2">
          {% include 'catalog/home/tabslider.twig' with {'sliders': sliders_2, 'sliders_key': 'sliders_2'} %}
				</div>

				{# Блог #}
        <div class="tab-pane" id="tab-blog">
          {% include 'catalog/home/blog.twig' %}
        </div>

      </div>
    </form>
  </div>
</div>

