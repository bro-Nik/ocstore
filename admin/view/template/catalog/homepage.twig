											<input class="form-control" type="text" name="recommendation[{{ row_recommendation }}][sort_order]" value="{{ recommendation['sort_order'] }}" />
										</td>
										<td class="text-right">
	          					<div class="input-group-btn">
												<a class="btn btn-sm btn-danger" onclick="$('#item-recommendation-row{{ row_recommendation }}').remove();" data-toggle="tooltip" title="Удалить"><i class="fa fa-times"></i></a>
											</div>
										</td>
									</tr>
								{% set row_recommendation = row_recommendation + 1 %} 
								{% endfor %} 
								</tbody>
								<tfoot>
									<tr>
										<td colspan="6"></td>
										<td class="text-right"><a class="btn btn-primary" onclick="addRecommendationItem();" data-toggle="tooltip" title="Добавить"><i class="fa fa-plus"></i></a></td>
									</tr>
								</tfoot>
							</table>
						</div>
					</div>

					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-width">Ширина баннера:</label>
						<div class="col-sm-3">
							<input type="text" name="recommendations[width]" value="{{ recommendations['width'] }}" placeholder="Ширина" id="input-width" class="form-control" />
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-height">Высота баннера:</label>
						<div class="col-sm-3">
							<input type="text" name="recommendations[height]" value="{{ recommendations['height'] }}" placeholder="Высота" id="input-height" class="form-control" />
						</div>
					</div>
			  </div>

			  <div class="tab-pane" id="tab-related-categories">
			    <div class="form-group">
            <label class="col-sm-2 control-label" for="input-product-related">{{ entry_related_wb }}</label>
            <div class="col-sm-10">
              <input type="text" name="product_related_input" value="" placeholder="{{ entry_related_wb }}" id="input-product-related" class="form-control" />
              <div id="product-related" class="well well-sm" style="height: 150px; overflow: auto;">
                {% for product_related in product_related %}
                  <div id="product-related{{ product_related.product_id }}"><i class="fa fa-minus-circle"></i> {{ product_related.name }}
                    <input type="hidden" name="product_related[]" value="{{ product_related.product_id }}" />
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-service-related">Рекомендуемые услуги:</label>
            <div class="col-sm-10">
              <input type="text" name="service_related_input" value="" placeholder="{{ entry_related_service }}" id="input-service-related" class="form-control" />
              <div id="service-related" class="well well-sm" style="height: 150px; overflow: auto;">
                {% for service_related in service_related %}
                  <div id="service-related{{ service_related.article_id }}"><i class="fa fa-minus-circle"></i> {{ service_related.name }}
                    <input type="hidden" name="service_related[]" value="{{ service_related.article_id }}" />
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>

			    <div class="form-group">
            <label class="col-sm-2 control-label" for="input-article-related">{{ entry_related_article }}</label>
            <div class="col-sm-10">
              <input type="text" name="article_related_input" value="" placeholder="{{ entry_related_article }}" id="input-article-related" class="form-control" />
              <div id="article-related" class="well well-sm" style="height: 150px; overflow: auto;">
                {% for article_related in article_related %}
                  <div id="article-related{{ article_related.article_id }}"><i class="fa fa-minus-circle"></i> {{ article_related.name }}
                    <input type="hidden" name="article_related[]" value="{{ article_related.article_id }}" />
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>

			    <div class="form-group">
          	{% include 'catalog/partials/related_categories.twig' %}
        	</div>

        </div>

        <div class="tab-pane" id="tab-blog">
					<div class="form-group">
						<label class="col-sm-2 control-label">Включен:</label>
						<div class="col-sm-3">
							<label class="radio-inline">
								<input type="radio" name="blog[status]" value="1" {% if (blog['status']) %} checked="checked" {% endif %} /><span>Да</span>
							</label>
							<label class="radio-inline">
								<input type="radio" name="blog[status]" value="0" {% if (not blog['status']) %} checked="checked" {% endif %} /><span>Нет</span>
							</label>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">Заголовок:</label>
						<div class="col-sm-3">			
							<div class="input-group">
								<input class="form-control" type="text" name="blog[title]" value="{{blog['title'] is defined ? blog['title'] : 'Новости' }}" />
							</div>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">Ссылка "Смотреть все":</label>
						<div class="col-sm-3">
							<div class="input-group">
								<input class="form-control" type="text" name="blog[url_all_text]" placeholder="Текст" value="{{blog['url_all_text'] is defined ? blog['url_all_text'] : '' }}" />
							</div>
						</div>
						<div class="col-sm-3">
							<div class="input-group">
								<input class="form-control" type="text" name="blog[url_all]" placeholder="Ссылка" value="{{blog['url_all'] is defined ? blog['url_all'] : '' }}" />
							</div>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-category">Категория новостей:</label>
						<div class="col-sm-3">
							<select name="blog[blog_category_id]" class="form-control">
								<option value="0" selected="selected">Все</option>
								{% for category in blog_categories %} 
								{% if (category['blog_category_id'] == blog['blog_category_id']) %} 
								<option value="{{ category['blog_category_id'] }}" selected="selected">{{ category['name'] }}</option>
								{% else %} 
								<option value="{{ category['blog_category_id'] }}">{{ category['name'] }}</option>
								{% endif %} 
								{% endfor %} 
							</select>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">Лимит новостей в виджете:</label>
						<div class="col-sm-3">
						<input type="text" name="blog[news_limit]" value="{{ blog['news_limit'] is defined ? blog['news_limit'] : '' }}" class="form-control" />
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">Лимит символов описания:</label>
						<div class="col-sm-3">
						<input type="text" name="blog[desc_limit]" value="{{ (blog['desc_limit'] is defined) ? blog['desc_limit'] : '' }}" class="form-control" />
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">Выводить картинку:</label>
						<div class="col-sm-3">
							<label class="radio-inline">
								<input type="radio" name="blog[image_status]" value="1" {% if (blog['image_status'] is not defined or (blog['image_status'] is defined and blog['image_status'])) %} checked="checked" {% endif %} /><span>Да</span>
							</label>
							<label class="radio-inline">
								<input type="radio" name="blog[image_status]" value="0" {% if (blog['image_status'] is defined and not blog['image_status']) %} checked="checked" {% endif %} /><span>Нет</span>
							</label>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">Размер картинки, px:</label>
						<div class="col-sm-9">
							<div class="row">
								<div class="col-sm-2">
								<input data-toggle="tooltip" data-placement="top" title="Ширина" type="text" name="blog[image_width]" value="{{ blog['image_width'] is defined ? blog['image_width'] : '' }}" class="form-control" />
								</div>
								<div class="col-sm-2">
								<input data-toggle="tooltip" data-placement="top" title="Высота" type="text" name="blog[image_height]" value="{{ (blog['image_height'] is defined) ? blog['image_height'] : '' }}" class="form-control" />
								</div>
							</div>
						</div>
					</div>
        </div>

      </div>
    </form>
  </div>
</div>

