var row_slideshow = $('.row_slideshow').length+1;
function addSlideshowItem() {
	html  = '<tr id="item-slideshow-row-main' + row_slideshow + '" class="row_slideshow">';
	html += '<td class="text-center"><div><a href="" id="revtheme_home_slideshow_thumb-image' + row_slideshow + '" data-toggle="image" class="img-thumbnail"><img src="{{ placeholder }}" /></a><input type="hidden" name="slide[' + row_slideshow + '][image]" value="" id="input-block-image' + row_slideshow + '" /></div></td>';
	html += '<td class="text-left">';
